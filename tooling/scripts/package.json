{
  "name": "@dunzio/scripts",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env${ENV:+.${ENV}} --",
    "x": "pnpm with-env tsx -- ",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint"
  },
  "devDependencies": {
    "@dunzio/db": "workspace:*",
    "@dunzio/eslint-config": "workspace:*",
    "@dunzio/prettier-config": "workspace:*",
    "@dunzio/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "dotenv-cli": "catalog:",
    "drizzle-orm": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "zod": "catalog:"
  },
  "prettier": "@dunzio/prettier-config"
}
